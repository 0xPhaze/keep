{
  "name": "multi-sig",
  "version": "1.0.1",
  "main": "index.js",
  "repository": "https://github.com/kalidao/multi-sig",
  "author": "Ross Campbell <rosscampbell9@gmail.com>",
  "license": "AGPL-3",
  "private": false,
  "scripts": {
    "prettier": "prettier --write 'src/**/*.sol'",
    "prettier:list": "prettier --list-different 'src/**/*.sol'",
    "prettier:check": "prettier --check 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "solhint:check": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint": "npm run prettier && npm run solhint",
    "lint:check": "npm run prettier:check && npm run solhint:check",
    "clean": "forge clean",
    "setup": "forge clean && forge build --optimize --optimize-runs 9999999",
    "sync": "forge update",
    "test": "forge clean && forge test --optimize --optimize-runs 9999999 -vvv",
    "snapshot": "forge clean && forge snapshot --optimize --optimize-runs 9999999"
  },
  "dependencies": {
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6"
  }
}
